@model List<PJ_MSIT143_team02.Models.Comment>

@{
    //ViewData["Title"] = "Discount";
}

<div class="row">
        <div class="col-lg-12" id="data">
            @foreach (var item in Model)
            {
                <div class="breadcrumb-text" style="text-align:left">
                    <h5>評分:</h5>
                    <p>@Html.DisplayFor(model => item.CommentPoint) / 5</p>
                    <h5>評論:</h5>
                    <p>@Html.DisplayFor(model => item.CommentDetail)</p>
                </div>
                <hr />
            }
        </div>
    <div class="col-lg-12" id="link">
        <br />
        @if (Model.Count == 0)
        {
            <label style="margin-left:315px;font-size:13.5px;color:dimgray">(暫無評論)</label>
        } else
        {            
            <a asp-area="" asp-controller="" asp-action="" style="margin-left:315px">點我看更多</a>
        }
    </div>
</div>

