@model IEnumerable<PJ_MSIT143_team02.Models.Discount>

@{ ViewData["Title"] = "DiscountMain"; }

<link href="~/css/acti-and-disc.css" rel="stylesheet" />
<div id="mainbox">
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>折扣</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="rooms-section spad">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="room-item card">
                            @*<img src="" class="card-img-top" />*@
                            <div class="ri-text">
                                <h5 class="card-title">
                                    @Html.DisplayFor(modelItem => item.DiscountName)
                                </h5>
                                    @if (string.IsNullOrEmpty(item.Coupon))
                                    {
                                        <p class="card-text">
                                            直接使用信用卡結帳享此優惠
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="card-text">
                                            優惠碼: @Html.DisplayFor(modelItem => item.Coupon)
                                        </p>
                                    }
                                <p class="card-text" style="text-align:right">
                                    @Html.ActionLink("查看更多", "Details", new { id = item.RoomDiscountId }, new { @class = "btn btn-secondary" })
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>