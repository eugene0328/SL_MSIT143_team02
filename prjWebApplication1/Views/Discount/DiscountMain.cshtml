@model IEnumerable<PJ_MSIT143_team02.Models.Discount>

@{ ViewData["Title"] = "DiscountMain"; }

<link href="~/css/acti-and-disc.css" rel="stylesheet" />
<div id="box">
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>折扣</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="rooms-section spad">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="room-item card">
                            <img src="" class="card-img-top" />
                            <div class="ri-text">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        @Html.DisplayFor(modelItem => item.DiscountName)
                                    </h5>
                                    <p class="card-text">
                                        @Html.DisplayFor(modelItem => item.DiscountInfo)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>