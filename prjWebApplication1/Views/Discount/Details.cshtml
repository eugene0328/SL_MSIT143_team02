@model PJ_MSIT143_team02.Models.Discount

@{
    ViewData["Title"] = "Details";
}

<link href="~/css/acti-and-disc.css" rel="stylesheet" />
<div id="box">
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>詳細折扣資訊</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="rooms-section spad">
        <div class="container row" style="margin:auto">
            <div class="col-lg-6 col-md-6 mb-4">
                <div class="room-item card">
                    <div class="card-body">
                        <h4 class="col-sm-10 card-title">
                            @Html.DisplayFor(model => model.DiscountName)
                        </h4>
                        <p class="col-sm-10 card-text">
                            @Html.DisplayFor(model => model.DiscountInfo)
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 mb-4">
                <div class="room-item card">
                    <img src="" class="card-img-top" />
                </div>
            </div>
            <div class="col-md-6">
                <a asp-action="DiscountMain" class="btn btn-light">回上頁</a>
            </div>
        </div>
    </section>
</div>
