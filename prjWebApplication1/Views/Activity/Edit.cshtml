@model PJ_MSIT143_team02.Models.Activity

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center">修改活動</h1>
<hr />

<div class="row" style="min-block-size:1000px">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="ActivityId" class="control-label"></label>*@
            <input type="hidden" asp-for="ActivityId" class="form-control" />
            @*<span asp-validation-for="ActivityId" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="ActivityName" class="control-label">活動名稱</label>
                <input asp-for="ActivityName" class="form-control" />
                <span asp-validation-for="ActivityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityDate" class="control-label">活動日期</label>
                <input asp-for="ActivityDate" class="form-control" />
                <span asp-validation-for="ActivityDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityInfo" class="control-label">活動資訊</label>
                <input asp-for="ActivityInfo" class="form-control" />
                <span asp-validation-for="ActivityInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityCapacity" class="control-label">人數上限</label>
                <input asp-for="ActivityCapacity" class="form-control" />
                <span asp-validation-for="ActivityCapacity" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="ActivityStatus" class="control-label">活動狀態</label>
                    <input asp-for="ActivityStatus" class="form-control" />
                    <span asp-validation-for="ActivityStatus" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="ActivityStatus" class="control-label">活動狀態</label>
                @*<input asp-for="ActivityStatus" class="form-control" />*@
                <br />
                <select asp-for="ActivityStatus">
                    <option value="">請選擇</option>
                    <option value="未開放報名">未開放報名</option>
                    <option value="開放報名">開放報名</option>
                    <option value="額滿">額滿</option>
                    <option value="已結束">已結束</option>
                </select>
                <br /><br />
                <span asp-validation-for="ActivityStatus" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="ActivityLocation" class="control-label">活動地點</label>
                    <input asp-for="ActivityLocation" class="form-control" />
                    <span asp-validation-for="ActivityLocation" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="ActivityLocation" class="control-label">活動地點</label>
                @*<input asp-for="ActivityLocation" class="form-control" />*@
                <br />
                <select asp-for="ActivityLocation">
                    <option value="">請選擇</option>
                    <option value="基隆市">基隆市</option>
                    <option value="台北市">台北市</option>
                    <option value="新北市">新北市</option>
                    <option value="桃園市">桃園市</option>
                    <option value="新竹縣">新竹縣</option>
                    <option value="新竹市">新竹市</option>
                    <option value="苗栗縣">苗栗縣</option>
                    <option value="台中市">台中市</option>
                    <option value="彰化縣">彰化縣</option>
                    <option value="南投縣">南投縣</option>
                    <option value="雲林縣">雲林縣</option>
                    <option value="嘉義縣">嘉義縣</option>
                    <option value="嘉義市">嘉義市</option>
                    <option value="台南市">台南市</option>
                    <option value="高雄市">高雄市</option>
                    <option value="屏東縣">屏東縣</option>
                    <option value="宜蘭縣">宜蘭縣</option>
                    <option value="花蓮縣">花蓮縣</option>
                    <option value="台東縣">台東縣</option>
                    <option value="澎湖縣">澎湖縣</option>
                    <option value="金門縣">金門縣</option>
                    <option value="連江縣">連江縣</option>
                    <option value="全國適用">全國適用</option>
                </select>
                <br /><br />
                <span asp-validation-for="ActivityLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityPrice" class="control-label">活動價格</label>
                <input asp-for="ActivityPrice" class="form-control" />
                <span asp-validation-for="ActivityPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存變更" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">回上頁</a>
</div>
<div>
    <br />
    <br />
    <br />
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>$('#Activity').addClass('active');</script>
}
