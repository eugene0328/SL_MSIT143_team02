@model PJ_MSIT143_team02.ViewModels.CRoomNew

@{
    ViewData["Title"] = "MemnerRoomEdit";
}

<hr />
<h1 style="text-align:center">房源編輯</h1>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="MemnerRoomEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class=" col-md-4">
                    <input type="hidden" name="RoomId" value="@Model.RoomId" />
                    <label asp-for="RoomName" class="control-label">房間名稱</label>
                    <input asp-for="RoomName" class="form-control" />
                    <span asp-validation-for="RoomName" class="text-danger"></span>
                </div>
                <div class=" col-md-4">
                    <label asp-for="Qty" class="control-label">數量</label>
                    <input asp-for="Qty" class="form-control" />
                    <span asp-validation-for="Qty" class="text-danger"></span>
                </div>
                <div class=" col-md-4">
                    <label asp-for="RoomPrice" class="control-label">價格</label>
                    <input asp-for="RoomPrice" class="form-control" />
                    <span asp-validation-for="RoomPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">地址</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomIntrodution" class="control-label">介紹</label>
                <textarea asp-for="RoomIntrodution" class="form-control"></textarea>
                <span asp-validation-for="RoomIntrodution" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="RoomstatusId" class="control-label">房間狀態</label>
                <span asp-validation-for="RoomstatusId" class="text-danger"></span>
                <ul class="list-group">
                    <li class="list-group-item">
                        <input class="form-check-input me-1" type="radio" name="RoomstatusId" value="4" id="4" checked>
                        <label class="form-check-label" for="4">未上架</label>
                    </li>
                    <li class="list-group-item">
                        <input class="form-check-input me-1" type="radio" name="RoomstatusId" value="2" id="2">
                        <label class="form-check-label" for="2">已上架</label>
                    </li>
                </ul>
            </div>

            <div class="row" style="padding:10px">
                <p style="text-align:center"> 基礎設施 </p>
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    @* 未選取設備的房源會空白 *@
                    @{
                        int id = 0;
                        foreach (var i in Model.EquipmentNamelist)
                        {
                            if (Model.EquipmentId.Count == 0 && @Model.EquipmentCatergoryIdlist[id] == 1)
                            {
                                <div style="float:left " class="col-md-6">
                                    <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id]" id="@Model.EquipmentIdlist[id]">
                                    <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id]">@i</label>
                                </div>
                            }

                            var count = 1;
                            foreach (var j in Model.EquipmentId)
                            {

                                if (@Model.EquipmentCatergoryIdlist[id] == 1)
                                {
                                    if (j == @Model.EquipmentIdlist[id])
                                    {
                                        <div style="float:left " class="col-md-6">
                                            <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id]" id="@Model.EquipmentIdlist[id]" checked>
                                            <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id]">@i</label>
                                        </div>
                                        break;
                                    }
                                    if (Model.EquipmentId.Count == count)
                                    {
                                        <div style="float:left " class="col-md-6">
                                            <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id]" id="@Model.EquipmentIdlist[id]">
                                            <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id]">@i</label>
                                        </div>
                                        break;
                                    }
                                }
                                count++;
                            }
                            id++;
                        }
                    }
                </div>
                <div class="col-md-1"></div>

            </div>
            <div class="row" style="padding:10px">
                <p style="text-align:center"> 獨特設施 </p>
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    @{
                        int id2 = 0;
                        foreach (var i in Model.EquipmentNamelist)
                        {
                            if (Model.EquipmentId.Count == 0 && @Model.EquipmentCatergoryIdlist[id2] == 2)
                            {
                                <div style="float:left " class="col-md-6">
                                    <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id2]" id="@Model.EquipmentIdlist[id2]">
                                    <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id2]">@i</label>
                                </div>
                            }
                            var count = 1;
                            foreach (var j in Model.EquipmentId)
                            {

                                if (@Model.EquipmentCatergoryIdlist[id2] == 2)
                                {
                                    if (j == @Model.EquipmentIdlist[id2])
                                    {
                                        <div style="float:left " class="col-md-6">
                                            <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id2]" id="@Model.EquipmentIdlist[id2]" checked>
                                            <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id2]">@i</label>
                                        </div>
                                        break;
                                    }
                                    if (Model.EquipmentId.Count == count)
                                    {
                                        <div style="float:left " class="col-md-6">
                                            <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id2]" id="@Model.EquipmentIdlist[id2]">
                                            <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id2]">@i</label>
                                        </div>
                                        break;
                                    }
                                }
                                count++;
                            }
                            id2++;
                        }
                    }
                </div>
                <div class="col-md-1"></div>

            </div>
            <div class="row" style="padding:10px">
                <p style="text-align:center"> 安全設施 </p>
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    @{
                        int id3 = 0;
                        foreach (var i in Model.EquipmentNamelist)
                        {
                            if (Model.EquipmentId.Count == 0 && @Model.EquipmentCatergoryIdlist[id3] == 3)
                            {
                                <div style="float:left " class="col-md-6">
                                    <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id3]" id="@Model.EquipmentIdlist[id3]">
                                    <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id3]">@i</label>
                                </div>
                            }
                            var count = 1;
                            foreach (var j in Model.EquipmentId)
                            {

                                if (@Model.EquipmentCatergoryIdlist[id3] == 3)
                                {
                                    if (j == @Model.EquipmentIdlist[id3])
                                    {
                                        <div style="float:left " class="col-md-6">
                                            <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id3]" id="@Model.EquipmentIdlist[id3]" checked>
                                            <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id3]">@i</label>
                                        </div>
                                        break;
                                    }
                                    if (Model.EquipmentId.Count == count)
                                    {
                                        <div style="float:left " class="col-md-6">
                                            <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id3]" id="@Model.EquipmentIdlist[id3]">
                                            <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id3]">@i</label>
                                        </div>
                                        break;
                                    }
                                }
                                count++;
                            }
                            @*if (key == 0)
                        {
                            <div style="float:left " class="col-md-6">
                                <input class="form-check-input me-1" type="checkbox" name="EquipmentId" value="@Model.EquipmentIdlist[id3]" id="@Model.EquipmentIdlist[id3]">
                                <label class="form-check-label stretched-link" for="@Model.EquipmentIdlist[id3]">@i</label>
                            </div>
                            break;
                        }*@
                            id3++;
                        }


                    }
                </div>
                <div class="col-md-1"></div>

            </div>

            <div class="row" style="padding:10px">
                <p style="text-align:center"> 房源圖片 </p>
                <div class="col-md-1"></div>
                <div class="col-md-10 ">
                    @{
                        foreach (var item in Model.imgId)
                        {
                            <div id="img_div">
                                <img src="@Url.Action("ShowPhoto","MemberOnly", new {imgId= item })" style=" padding:5px; height:200px" />
                                <div id="img_div1">
                                    @Html.ActionLink("刪除", "MemnerRoomPhotoDelete", new { ImageId = item }, new { @id = "img_delete" });
                                </div>
                            </div>
                        }

                    }
                    <input type="file" name="img" id="img" multiple accept="image/*" />
                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="col-md-4"></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
            $('#img_div1').on('click', function () {
            $('img_div').attr('hidden', 'hidden')
            })
    $("list-group").load(function () {

    })
    $("list-group").load
            if (@Model.RoomstatusId == 4)
            {
                    $("4").attr("checked", "checked")
            }



</script>

}
