@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/10e2f2fe75.js" crossorigin="anonymous"></script>
    <script>
        $("#minus").click(function () {
            var i = Number($("#num").val());
            if (i > 1)
                i -= 1;
            $("#num").val(i);
        });
        $("#plus").click(function () {
            var i = Number($("#num").val());
            i += 1;
            $("#num").val(i);
        });
        $("#roomminus").click(function () {
            var i = Number($("#roomnum").val());
            if (i > 1)
                i -= 1;
            $("#roomnum").val(i);
        });
        $("#roomplus").click(function () {
            var i = Number($("#roomnum").val());
            i += 1;
            $("#roomnum").val(i);
        });
    </script>

    <script>
        let min_price =1000;
        let max_price = 100000;
        $(document).ready(function () {
            showAllItems();
        });
        $('#min-price').on("change mousemove", function () {
            min_price = parseInt($('#min-price').val());
            $('#min-price-txt').text('$' + min_price);
            showItemsFiltered();
        });
        $('#max-price').on("change mousemove", function () {
            max_price = parseInt($('#max-price').val());
            $('#max-price-txt').text('$' + max_price);
            showItemsFiltered();
        });

        let room_items = [
            {
                "RoomId": $(".RoomId").html(),
                "RoomIntrodution": $(".RoomIntrodution").html(),
                "RoomIPrice": $(".RoomIPrice").html(),
                "Address": $(".Address").html(),
            //    "thumbnail":<img src="~/assets/img2/steven-ungermann-aRT5UCf2MYY-unsplash.jpg" />,
            }

        ]







    </script>
