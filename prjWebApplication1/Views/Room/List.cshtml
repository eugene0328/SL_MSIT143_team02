@model PJ_MSIT143_team02.ViewModels.CRoomNew
@*@model List<PJ_MSIT143_team02.ViewModel.CRoomViewModel>*@
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "List";
}
<h1 style="text-align:center">房源清單</h1>

<div class="row">
    <div class="col-md-2 "></div>
    <div class="col-md-8 ">
        <table class="table">
            <thead>
                <tr>
                    <th>

                    </th>
                    <th>
                        房名
                    </th>
                    <th>
                        狀態
                    </th>
                    <th>
                        價格
                    </th>
                    <th>
                        房間數
                    </th>
                    <th>
                        位置
                    </th>
                    <th>
                        建立時間
                    </th>
                    <th>
                        功能
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.rooms)
                {
                <tr>
                    <td>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomName)
                    </td>

                    @{
                        if (item.RoomstatusId == 4)
                        {
                            <td>
                                未上架
                            </td>


                        }
                        else if(item.RoomstatusId == 2)
                        {
                            <td>
                                已上架
                            </td>
                        }
                        else if(item.RoomstatusId == 5)
                        {
                            <td>
                                永久下架
                            </td>
                        }
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>

                    <td>
                        @Html.ActionLink("編輯", "Edit", new { roomId = item.RoomId }) |
                        @Html.ActionLink("永久下架", "Delete", new { roomId = item.RoomId })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-2 "></div>
</div>
